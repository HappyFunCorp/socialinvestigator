.row{ "ng-hide" => "logged_in" }
  .col-lg-12
    %h1 Hello there

    %a{ :href=>"/login" } Login


.row{ "ng-show" => "logged_in", "ng-controller" => "DashboardController" }
  .col-sm-4{ "ng-controller" => "FriendsController" }
    %h2
      Friends
      %button.button.pull-right{ "ng-click"=>"refresh()" } Refresh

    %p#friend_status {{ status }}

    %ul#friends
      %li{ "ng-repeat" => "friend in data"}
        %a{"ng-click" => "show_user(friend)"} {{ friend }}

  .col-sm-8{ "ng-controller" => "TimelineController" }
    %h2
      Timeline: {{user}}
      %button.button.pull-right{ "ng-click"=>"refresh()" } Refresh

    %p#timeline_status {{ status }}

    %ul#timeline
      %li{ "ng-repeat"=>"tweet in data"}
        %span.created_at {{ tweet.created_at | date }}
        %span.tweet {{ tweet.text }}
